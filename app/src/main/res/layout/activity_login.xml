<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/net1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/p_image11"
        android:orientation="vertical"
        android:visibility="visible">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.1"
        android:gravity="center">


        <TextView
            android:id="@+id/Tv1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/p_image8"
            android:gravity="center"
            android:textColor="@color/white">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight=".7"
        android:background="@drawable/oval"
        android:backgroundTint="#6D9CCD"
        android:orientation="vertical">


        <EditText
            android:id="@+id/Ed1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/oval"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="15dp"
            android:hint="User Name"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="30dp"
            tools:ignore="TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/Ed2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/oval"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="30dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/TPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/BLogin"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btncolor"

            android:hint="LOGIN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="05dp"
        android:layout_weight="1.1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/TLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="No account yet? Create New"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/noNet1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_wifi_off_24"
            android:layout_gravity="center"
            android:layout_marginTop="200dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Internet Connection"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="italic">

        </TextView>
        <Button


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRY"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            >

        </Button>
    </LinearLayout>

</LinearLayout>